<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="#F49D0F"
        android:gravity="center_horizontal|center_vertical"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:background="@drawable/imagen"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A:"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/amigo"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje:"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/mensaje"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnVerNotificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Notificación"/>
    <Button
        android:id="@+id/btnVNE"
        android:onClick="notificacionOreoExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Notificación Expandida"/>
    <Button
        android:id="@+id/btnPersonalizada"
        android:onClick="notificacionOreoPersonalizada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Notificación Personalizada"/>

</LinearLayout>